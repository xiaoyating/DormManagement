<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生出入记录"
        android:textSize="60dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学号:"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/stu_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入学号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名:"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="房间号:"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/dorm_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入房间号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="目的地:"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/stu_place"
            android:hint="请输入目的地"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系方式:"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/stu_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入联系方式"/>
    </LinearLayout>

</LinearLayout>